            		android:background="@color/Orange"/>

        		<TextView
            		android:id="@+id/accelerator_pedal_position"
            		style="@style/LessSpacingBlackFont"
            		android:background="@color/Orange"/>
            		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/transmission_gear_pos_label"
            		style="@style/ExtraSpacingDefaultFont"
            		android:text="@string/transmission_gear_pos_label"
            		android:background="@color/LightBlue"/>

        		<TextView
            		android:id="@+id/transmission_gear_pos"
            		style="@style/LessSpacingBlackFont"
            		android:background="@color/LightBlue"/>
        		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>
            		
			</LinearLayout>
        
			<View 
            	android:layout_width="2dp"
            	android:layout_height="fill_parent"
           		android:background="@color/VividBlue"/>
           
			<LinearLayout   
				android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="vertical"
        		android:gravity="center"
        		android:layout_weight="1">
        
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>
        		
        		<TextView
