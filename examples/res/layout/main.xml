            		android:background="@color/Red"/>

        		<TextView
            		android:id="@+id/steering_wheel_angle"
            		style="@style/BlackFont"
            		android:background="@color/Red"/>
        			
         		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>
        
        		<TextView
            		android:id="@+id/vehicle_speed_label"
            		style="@style/DefaultFont"
            		android:text="@string/vehicle_speed_label"
            		android:background="@color/Orange"/>

        		<TextView
            		android:id="@+id/vehicle_speed"
            		style="@style/BlackFont"
            		android:background="@color/Orange"/>
            		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/fuel_consumed_label"
            		style="@style/DefaultFont"
            		android:text="@string/fuel_consumed_label"
            		android:background="@color/Green"/>

        		<TextView
            		android:id="@+id/fuel_consumed"
            		style="@style/BlackFont"
            		android:background="@color/Green"/>
            		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/fuel_level_label"
            		style="@style/DefaultFont"
            		android:text="@string/fuel_level_label"
            		android:background="@color/Red"/>

        		<TextView
            		android:id="@+id/fuel_level"
            		style="@style/BlackFont"
            		android:background="@color/Red"/>
            		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/odometer_label"
            		style="@style/DefaultFont"
            		android:text="@string/odometer_label"
            		android:background="@color/LightBlue"/>

        		<TextView
            		android:id="@+id/odometer"
            		style="@style/BlackFont"
            		android:background="@color/LightBlue"/>
            		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/fine_odometer_label"
