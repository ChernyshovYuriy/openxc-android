            		android:text="@string/brake_pedal_status_label"
            		android:background="@color/Green"/>

        		<TextView
            		android:id="@+id/brake_pedal_status"
            		style="@style/BlackFont"
            		android:background="@color/Green"/>
            		
        		<View 
           			android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/parking_brake_status_label"
