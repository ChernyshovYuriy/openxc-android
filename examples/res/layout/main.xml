            		android:text="@string/parking_brake_status_label"
            		android:background="@color/LightBlue"/>

        		<TextView
            		android:id="@+id/parking_brake_status"
            		style="@style/BlackFont"
            		android:background="@color/LightBlue"/>
            		
        		<View 
