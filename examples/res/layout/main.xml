            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/longitude_label"
            		style="@style/DefaultFont"
            		android:text="@string/longitude_label"
            		android:background="@color/Red"/>

        		<TextView
            		android:id="@+id/longitude"
            		style="@style/BlackFont"
            		android:background="@color/Red"/>
            		
        
        		<View 
