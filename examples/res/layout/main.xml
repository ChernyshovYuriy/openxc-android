            		android:background="@color/VividBlue"/>

        		<TextView
            		android:id="@+id/android_latitude_label"
            		style="@style/DefaultFont"
            		android:text="@string/android_latitude_label"
            		android:background="@color/DarkGreen"/>

        		<TextView
            		android:id="@+id/android_latitude"
            		style="@style/BlackFont"
            		android:background="@color/DarkGreen"/>
            		
        		<View 
