        		<TextView
            		android:id="@+id/android_longitude"
            		style="@style/BlackFont"
            		android:background="@color/NavyBlue"/>
            		
        		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>
        
        		<TextView
            		android:id="@+id/door_status_label"
            		style="@style/DefaultFont"
            		android:text="@string/door_status_label"
            		android:background="@color/Red"/>
 
         		<TextView
            		android:id="@+id/door_status"
            		style="@style/BlackFont"
            		android:background="@color/Red"/>
            		
         		<View 
            		android:layout_width="fill_parent"
            		android:layout_height="2dp"
            		android:background="@color/VividBlue"/>
       			
       			<TextView
            		android:id="@+id/button_event_label"
            		style="@style/DefaultFont"
            		android:text="@string/button_event_label"/>
         		
         		<TextView
